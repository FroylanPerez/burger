<div class="container">
    <div class="row">

        <div class="col-md-4">

            {{!-- <h2>Burgers Available to Devour!</h2> --}}

            <ul class="availableIndex">
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devour=true}}
                {{/unless}}
            {{/each}}
            </ul>

        </div>

        <div class="col-md-4">

            <img class="burgerImg" src="burger.jpg">
            <br>

            <h1>Eat Da Burger!</h1>
            <br>
            
            <form class="create-form">

            <div class="form-group">
                {{!-- <label for="ca">Burger Name:</label> --}}
                <input type="text" id="ca" name="burger_name">
            </div>
            <br>

            {{!-- <div class="form-group">
                <label for="devoured">Devoured?</label><br>
                <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                <input type="radio" name="devoured" value="0"> Available
            </div> --}}

            <button type="submit" class="submitBtn">Submit</button>
            </form>
            <br>

            <h6>Enter a burger you want to eat. Click the "Submit" button.</h6>

        </div>

        <div class="col-md-4">

            {{!-- <h2>Burgers already Devoured!</h2> --}}

            <ul class="devoured">
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burgerDevoured-block devour=false}}
                {{/if}}
            {{/each}}
            </ul>

        </div>


    </div>
</div>